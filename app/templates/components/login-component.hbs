{{yield}}

<form class='login-form' {{action 'authenticate' on='submit'}}>
  <div class='form-group'>
    {{input id='identification' value=identification placeholder='Your email'}}
  </div>
  <div class="form-group">
    {{input id='password' value=password placeholder='Your password' type='password'}}
  </div>
  <div class="form-group">
    <button type="submit">Login</button>
  </div>
</form>
